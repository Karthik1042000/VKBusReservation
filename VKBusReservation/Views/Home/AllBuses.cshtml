@using System.Runtime.Serialization
@using System.Globalization
@using VKBusReservation.Models
@model List<Bus>
@{
    ViewData["Title"] = "Buses List";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<h2>@ViewData["Title"]</h2>
<div class="nav-item pb-2" style="float:right;">
    <a class="nav-link text-primary" style="background-color:lightgoldenrodyellow;" asp-controller="Home" asp-action="CreateBus">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-truck-front-fill" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M3.5 0A2.5 2.5 0 0 0 1 2.5v9c0 .818.393 1.544 1 2v2a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5V14h6v1.5a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-2c.607-.456 1-1.182 1-2v-9A2.5 2.5 0 0 0 12.5 0h-9ZM3 3a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v3.9c0 .625-.562 1.092-1.17.994C10.925 7.747 9.208 7.5 8 7.5c-1.208 0-2.925.247-3.83.394A1.008 1.008 0 0 1 3 6.9V3Zm1 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm8 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm-5-2a1 1 0 1 0 0 2h2a1 1 0 1 0 0-2H7Z"/>
</svg>Create Bus
    </a>
</div>
<table class="table table-hover borderd " id="dataTable">
    <thead style="background-color:#ddd;">
        <tr>
            <th class="text-center">BusId</th>
            <th class="text-center">Bus Name</th>
            <th class="text-center">Bus Number </th>
            <th class="text-center">Total Seats</th>
            <th class="text-center">Trip Start Time</th>
            <th class="text-center">Trip End Time</th>
            <th class="text-center">Ticket Price</th>
            <th class="text-center">From</th>
            <th class="text-center">To</th>
            <th class="text-center" data-orderable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Bus bus in Model)
        {
            <tr>
                <td class="text-center">@bus.BusId</td>
                <td class="text-center">@bus.BusName</td>
                <td class="text-center">@bus.BusNumber</td>
                <td class="text-center">@bus.TotalSeats</td>
                <td class="text-center">@bus.TripStartTime.ToString("t", CultureInfo.CurrentUICulture)</td>
                <td class="text-center">@bus.TripEndTime.ToString("t", CultureInfo.CurrentUICulture)</td>
                <td class="text-center">@bus.TicketPrice</td>
                <td class="text-center">@bus.From</td>
                <td class="text-center">@bus.To</td>
                <td class="text-center">
                    <button class="btn btn-danger" onclick="ConfirmDelete(@bus.BusId)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>Delete
                    </button>
                    <a href="/Home/EditBus/@bus.BusId" class="btn" style="background-color:#96E4EF;">
                        Edit
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
        </tr>
    </tfoot>
</table>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable();
        })
    </script>
}